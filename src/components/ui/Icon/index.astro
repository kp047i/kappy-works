---
import type { Color } from "@util/color";
import { Icon } from "astro-icon";

export interface Props {
  name: string;
  title?: string;
  color?: Color;
  hoverColor?: Color;
}

// get name from https://icon-sets.iconify.design/mdi/github/

const { name, title, color, hoverColor } = Astro.props;
---

<Icon
  name={name}
  title={title || ""}
  class:list={["icon-md", color || "", hoverColor || ""]}
/>

<style>
  .icon-md {
    height: 32px;
    width: 32px;
    padding: 8px;
    border-radius: 50%;
  }
  .blackAlpha100:hover {
    background-color: var(--c-blackAlpha-100);
  }
  .primary {
    color: var(--c-primary);
  }
</style>
