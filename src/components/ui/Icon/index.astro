---
import type { Color } from "@util/color";
import { Icon } from "astro-icon";

export interface Props {
  name: string;
  title: string;
  hoverColor?: Color;
}

// get name from https://icon-sets.iconify.design/mdi/github/

const { name, title, hoverColor } = Astro.props;
---

<Icon name={name} title={title} class:list={["icon-md", hoverColor || ""]} />

<style>
  .icon-md {
    height: 32px;
    width: 32px;
    padding: 8px;
    border-radius: 50%;
  }
  .blackAlpha100:hover {
    background-color: var(--c-blackAlpha-100);
  }
</style>
